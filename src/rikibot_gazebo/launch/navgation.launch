<launch>
  <param name="use_sim_time" value="true"/>
  <include file="$(find rikibot_gazebo)/launch/map_amcl.launch" />
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
    <rosparam file="$(find rikibot_gazebo)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rikibot_gazebo)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rikibot_gazebo)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rikibot_gazebo)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rikibot_gazebo)/param/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find rikibot_gazebo)/param/move_base_params.yaml" command="load" />
  </node>
</launch>
